[push]
	default = simple
[user]
	name = Jonathan Creekmore
	email = jonathan@thecreekmores.org

[alias]
	review = !sh -c 'repo=$1 && repo=${repo:=origin/master} && git --no-pager log --reverse --oneline ${repo}..' -v
[core]
	excludesfile = /Users/jonathan/.gitignore_global
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[credential]
	helper = osxkeychain
	helper = cache --timeout=3600
[credential "https://github.com"]
	username = jcreekmore
[sendemail]
	from = Jonathan Creekmore <jonathan.creekmore@gmail.com>
	smtpserver = smtp.gmail.com
	smtpuser = jonathan.creekmore@gmail.com
	smtpencryption = tls
	smtpserverport = 587
