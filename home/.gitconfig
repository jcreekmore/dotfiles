[push]
	default = simple
	autoSetupRemote = true
	followTags = true
[user]
	name = Jonathan Creekmore
	email = jonathan@thecreekmores.org

[core]
	excludesfile = /Users/jonathan/.gitignore_global

[merge]
    conflictstyle = zdiff3

[diff]
    external = difft
	algorithm = histogram

[credential]
	helper = osxkeychain
	helper = cache --timeout=3600
[sendemail]
	from = Jonathan Creekmore <jonathan.creekmore@gmail.com>
	smtpserver = smtp.gmail.com
	smtpuser = jonathan.creekmore@gmail.com
	smtpencryption = tls
	smtpserverport = 587
[branch]
	autosetuprebase = always
	sort = -committerdate
[log]
	decorate = auto
[color]
	ui = auto
[credentials]
	helper = store
[gpg]
	format = ssh
[commit]
	gpgsign = true
	verbose = true
[init]
	defaultBranch = main
[tag]
	sort = version:refname
[fetch]
	prune = true
	pruneTags = true
	all = true
[rerere]
	enabled = true
	autoupdate = true
[rebase]
	autoSquash = true
	autoStash = true
	updateRefs = true
[pull]
	rebase = true
